<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.project.mapper.UserMapper">
    
    <select id ="login" resultType="kr.project.domain.User">
	 select * from userinfo where id=#{id} and pwd=#{pwd}
    </select>
    
    <insert id ="regist" parameterType="kr.project.domain.User">
        insert into userinfo values(#{id}, #{pwd}, #{nick})
    </insert>
    
    <select id ="idcheckAjax" resultType="kr.project.domain.User" parameterType="String">
        select * from userinfo where id = #{id}
    </select>
 </mapper>   