<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="kr.project.mapper.ReviewMapper">
      
       <resultMap type="kr.project.domain.Review" id="ReviewRM">
        <result property="reviewNo" column="review_no"/>
		<result property="appid" column="app_id"/>
		<result property="reviewTitle" column="review_title"/>
		<result property="reviewContent" column="review_content"/>
		<result property="reviewRating" column="review_rating"/>
		<result property="emoResult" column="emo_result"/>
		<result property="reviewDate" column="review_date"/>
		<result property="appCrawlId" column="app_crawl_id"/>
		<result property="reviewCate" column="app_cate"/>
		<result property="helpRV" column="h_rv"/>
	</resultMap>
	
      <select id="reviewRead" resultType="list" resultMap="ReviewRM">
         select * from app_review_table where app_id = #{appid} and h_rv="1";
      </select>
      
       <select id="monthRating" resultType="String" parameterType="map">
      	select avg(review_rating) from app_review_table where app_id = #{appid} and review_date between DATE_SUB(now(), INTERVAL #{month} Month) and now()
      </select>
      
      <select id="reviewEmoRead" parameterType="map"  resultMap="ReviewRM">
          select * from app_review_table where app_id = #{appid}
          <choose>
              <when test='apppn gte 0 and apppn lt 0.2'>
                  <![CDATA[and emo_result>=0 and emo_result<0.2 and h_rv='1']]>
              </when>
              <when test='apppn gte 0.2 and apppn lt 0.4'>
                  <![CDATA[and emo_result>=0.2 and emo_result<0.4 and h_rv='1']]>
              </when>
              <when test='apppn gte 0.4 and apppn lt 0.6'>
                  <![CDATA[and emo_result>=0.4 and emo_result<0.6 and h_rv='1']]>
              </when>
               <when test='apppn gte 0.6 and apppn lt 0.8'>
                  <![CDATA[and emo_result>=0.6 and emo_result<0.8 and h_rv='1']]>
              </when>
                <when test='apppn gte 0.8 and apppn lte 1'>
                  <![CDATA[and emo_result>=0.8 and emo_result<=1 and h_rv='1']]>
              </when>
              <otherwise>
                  and 1=1
              </otherwise>
          </choose>
      </select>
      
      <select id="reviewEmo" parameterType="map"  resultType="String">
          select Count(*) from app_review_table where app_id = #{appid}
          <choose>
              <when test='emo gte 0 and emo lt 0.2'>
                   <![CDATA[and emo_result>=0 and emo_result<0.2]]>
              </when>
                <when test='emo gte 0.2 and emo lt 0.4'>
                  <![CDATA[and emo_result>=0.2 and emo_result<0.4]]>
              </when>
              <when test='emo gte 0.4 and emo lt 0.6'>
                  <![CDATA[and emo_result>=0.4 and emo_result<0.6]]>
              </when>
               <when test='emo gte 0.6 and emo lt 0.8'>
                  <![CDATA[and emo_result>=0.6 and emo_result<0.8]]>
              </when>
                <when test='emo gte 0.8 and emo lte 1'>
                  <![CDATA[and emo_result>=0.8 and emo_result<=1]]>
              </when>
              <otherwise>
                  and 1=1
              </otherwise>
          </choose>
      </select>
      
      <select id = "allCn"  resultType="String" >
          select count(*) from app_review_table where app_id = #{appid}
      </select>
      
  </mapper>